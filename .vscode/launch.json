    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Vite UI",
            "cwd": "${workspaceFolder}/app/llm-vite",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"]
        },
        {

            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            "program": "${workspaceFolder}/app/llm-vite/server/index.ts",
            "preLaunchTask": "tsc: build - app/llm-vite/tsconfig.server.json",
            "outFiles": ["${workspaceFolder}/app/llm-vite/dist/**/*.js"]
        }

    ]
}